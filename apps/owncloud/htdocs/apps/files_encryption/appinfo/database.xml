<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	 <name>*dbname*</name>
	 <create>true</create>
	 <overwrite>false</overwrite>
	 <charset>utf8</charset>
	 <table>
		<name>*dbprefix*encryption</name>
		<declaration>
			<field>
				<name>uid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>mode</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>recovery_enabled</name>
				<type>integer</type>
				<notnull>true</notnull>
				<default>0</default>
			</field>
			<field>
				<name>migration_status</name>
				<type>integer</type>
				<notnull>true</notnull>
				<default>0</default>
			</field>
		</declaration>
	</table>
</database>
